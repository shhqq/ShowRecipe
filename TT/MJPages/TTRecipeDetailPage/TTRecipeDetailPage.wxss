


#recipe-content {
  width: calc(100% - 30rpx - 30rpx);
  height: 1000rpx;
  position: absolute;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  /* background-color: pink; */
}


#header-content {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  /* background-color: lightblue; */
}

#header-content-text {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

#header-content-text-name {
  width: calc(100% - 180rpx);
  height: 100%;
  font-size: 36rpx;
  color: #333333;
  font-weight: 470;
}

#header-content-text-price {
  width: 180rpx;
  height: 100%;
  font-size: 36rpx;
  color: #FF7452;
  text-align: right;
  font-weight: 470;
}

#header-content-tags {
  margin-top: 5rpx;
  width: 100%;
  height: 70rpx;
  overflow:hidden;
}


#description-content {
  width: 100%;
  height: 200rpx;
}

#description-content-text {
  width: 100%;
}

.cell-body-picture {
  height: 220rpx;
  width: 220rpx;
  float: left;
  margin-right: 10rpx;
  margin-top: 10rpx;
}


#extension-content-tags {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 55rpx;
  overflow:hidden;
}